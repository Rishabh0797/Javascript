        <script>
            function test1(){
 var a = document.getElementById("demo5").value;
 var b = document.getElementById("demo6").value;
   if(a == b){
     document.getElementById("para1").innerHTML =  "Confirmed";
    }
   else{
    document.getElementById("para1").innerHTML =  "Not matched";
    }
}
        </script>
    </head>
